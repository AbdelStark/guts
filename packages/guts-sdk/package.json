{
  "name": "@guts/sdk",
  "version": "0.1.0",
  "description": "Official TypeScript SDK for the Guts decentralized code collaboration platform",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "guts",
    "git",
    "decentralized",
    "code-collaboration",
    "sdk",
    "api-client"
  ],
  "author": "Guts Contributors",
  "license": "MIT OR Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/AbdelStark/guts.git",
    "directory": "packages/guts-sdk"
  },
  "homepage": "https://github.com/AbdelStark/guts",
  "bugs": {
    "url": "https://github.com/AbdelStark/guts/issues"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
